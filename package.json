{
  "name": "solidity-min-proxy",
  "version": "0.0.1",
  "description": "minimal proxy implementation and solidity integration",
  "engines": {
    "node": ">=14"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/contracts",
    "/contracts-gen",
    "/dist",
    "!/contracts/test",
    "!/contracts/mocks"
  ],
  "scripts": {
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "eslint": "npx eslint .",
    "prettier": "npx prettier --check 'contracts/**/*.sol' '{lib,test,scripts}/**/*.ts'",
    "lint": "npm run solhint && npm run eslint && npm run prettier",
    "compile-contracts": "hardhat compile",
    "precompile-contracts": "ts-node scripts/prebuild.ts",
    "compile-ts": "tsc -p tsconfig.build.json",
    "build": "npm run compile-contracts",
    "test": "hardhat test",
    "prepublishOnly": "npm run lint && npm run build && npm test && npm run compile-ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/asm": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "ethers": "^5.7.1",
    "hardhat": "^2.12.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3"
  }
}
